<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.developer.postservice.dbti.query.mapper.DbtiMapper">

    <!-- dbti 성향 역할군에 따라 조회 -->
    <select
            id="findByDbtiRole"
            parameterType="String"
            resultType="String"
    >
        SELECT
            dbti_value
        FROM dbti
        WHERE dbti_role = #{ dbtiRole }

    </select>

    <!-- dbti 전체 조회 -->
    <select
            id="findAll"
            resultType="com.developer.postservice.dbti.query.dto.ResponseDbtiDTO"
    >
        SELECT
        *
        FROM dbti
    </select>


</mapper>